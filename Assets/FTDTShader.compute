// Each #kernel tells which function to compile; you can have many kernels
#pragma kernel CSMain

struct FDTD{
    float3 Position;
    float4 Color;
    float coef;
    float time;
};

RWStructuredBuffer<FDTD> cells;
float resolution;
float time;

[numthreads(1,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    int xPos = ceil(id.x / resolution);
    int yPos = ceil(id.y / resolution);

    FDTD cell = cell[id.x];
    cell.Color = float4(xPos,0,0,1);

    cells[id.x] = cell;
}
